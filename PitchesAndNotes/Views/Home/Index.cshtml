@model PitchesAndNotes.ViewModels.HomeViewModel
@{
    ViewBag.Title = "Pitches and Notes - All Female A Capella";
}
<div class="row photoHeader titularRow" id="titleRowImage">

</div>
<section class="row">
    <div class="col-xs-12 jumbotron">
        <h1>Pitches and Notes</h1>
        <h4>UW-Madison's competitive female a cappella group</h4>
        <br />
    </div>
</section>
<div class="row homeContent">
    <div class="col-xs-12 col-md-8 col-md-push-2">
        @if (User.IsInRole("Administrator"))
        {
            @Html.ActionLink("Update Events", "UpdateEvents", "Home")
        }
        @if (Model.Event != null)
        {
            <div class="row">
                    <div class="col-md-12">
                        <h2 class="eventTitle text-center">@Model.Event.Title</h2>
                        @if (Model.Event.Date.Date == System.DateTime.Today)
                        {
                            <h4 class="eventDate text-center">@Model.Event.Location - Today!</h4>
                        }
                        else
                        {
                            <h4 class="eventDate text-center">@Model.Event.Location - @Model.Event.Date.ToString("D")</h4>
                        }
                        <hr class="hrSec" />
                        <blockquote class="edit" id="div_1">
                            @Model.Event.Description
                        </blockquote>
                    </div>
            </div>
            <div class="row">
                <div class="col-md-3 col-lg-push-9">
                    <br />
                    <br />
                    @*@Html.ActionLink("Buy Tickets", "Events", "Home", new { @class = "btn btn-danger"})*@ 
                    @if (Model.Event.TicketLink != null)
                    {
                        <a href="@Model.Event.TicketLink" class="btn btn-danger">Buy Tickets Online!</a>
                    }
                    <!--<button class="btn btn-danger">More Events <span class="glyphicon glyphicon-arrow-right"></span></button>-->
                    <br />
                    <br />
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-xs-12">
                    <h4>No Upcoming Events at this time.</h4>
                </div>
            </div>
            
        }
    </div>
</div>
<div class="row" id="photoGallery">
    <div class="col-xs-12">

    </div>
    <div class="hidden-xs hidden-sm col-md-3">

    </div>
    <div class="hidden-xs hidden-sm col-md-6">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="~/Content/2016.jpg" class="img-responsive" alt="..." />
                </div>
                <div class="item">
                    <img src="~/Content/groupShot.jpg" class="img-responsive" alt="...">
                </div>
                <div class="item">
                    <img src="~/Content/circle.jpg" class="img-responsive" alt="...">
                </div>
            </div>
            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="hidden-xs hidden-sm col-md-3">

    </div>
    <br />
</div>
<div class="row homeContent">
    <div class="col-xs-12 col-md-8 col-md-push-2">
        <h2>Announcements</h2>
        @if (User.IsInRole("Admin"))
         {
            @Html.ActionLink("Update Announcements", "UpdateAnnouncement", "Home")
        }
        <hr />
        <p class="announcementText"> &mdash; Pitches and Notes will be performing their winter show, 'The Rivalry Continues' on December 9th!</p>
    </div>
</div>

